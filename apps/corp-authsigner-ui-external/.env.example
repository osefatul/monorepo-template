# External App Environment Variables

# App Configuration
VITE_APP_NAME="Corp Auth Signer - External"
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="External corporate authentication signing application"

# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api/v1
VITE_API_TIMEOUT=30000
VITE_EXTERNAL_API_BASE_URL=http://localhost:8000/external/api

# Authentication
VITE_AUTH_PROVIDER=external
VITE_AUTH_DOMAIN=auth.company.com
VITE_AUTH_CLIENT_ID=external-client-id
VITE_SESSION_TIMEOUT=1800000

# Feature Flags
VITE_ENABLE_DEBUGGING=false
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ERROR_BOUNDARY=true
VITE_ENABLE_HOT_RELOAD=false

# UI Configuration
VITE_THEME=public
VITE_DEFAULT_LANGUAGE=en
VITE_TIMEZONE=UTC

# Analytics
VITE_ANALYTICS_ID=GA-EXTERNAL-XXXXXXXXX
VITE_ENABLE_ANALYTICS=true

# External Services
VITE_SIGNATURE_SERVICE_URL=http://localhost:8001
VITE_DOCUMENT_SERVICE_URL=http://localhost:8002
VITE_VERIFICATION_SERVICE_URL=http://localhost:8003

# Security
VITE_CSP_NONCE=your-csp-nonce-here
VITE_ALLOWED_ORIGINS=http://localhost:3002,https://external.company.com
VITE_RATE_LIMIT_ENABLED=true