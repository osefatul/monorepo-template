{
  "name": "corp-authsigner-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Corporate Auth Signer Monorepo",
  "workspaces": [
    "apps/corp-authsigner-ui-internal",
    "apps/corp-authsigner-ui-external",
    "packages/shared"
  ],
  "scripts": {
    "dev:internal": "npm run dev --workspace=corp-authsigner-ui-internal",
    "dev:external": "npm run dev --workspace=corp-authsigner-ui-external",
    "dev:both": "concurrently \"npm run dev:internal\" \"npm run dev:external\"",
    "build:internal": "npm run build --workspace=corp-authsigner-ui-internal",
    "build:external": "npm run build --workspace=corp-authsigner-ui-external",
    "build:shared": "npm run build --workspace=shared",
    "build:all": "npm run build:shared && npm run build:internal && npm run build:external",
    "clean": "npm run clean --workspaces --if-present",
    "clean:deps": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "clean:build": "rm -rf apps/*/dist packages/*/dist",
    "reset": "npm run clean:deps && npm run clean:build && npm install",
    "type-check": "npm run type-check --workspaces --if-present",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "lint:workspaces": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md  --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\" --ignore-path .prettierignore",
    "test": "npm run test --workspaces --if-present",
    "test:run": "npm run test:run --workspaces --if-present",
    "test:coverage": "npm run coverage --workspaces --if-present",
    "validate:structure": "node scripts/validate-file-structure.js",
    "validate:components": "node scripts/validate-component-structure.js",
    "validate:tests": "node scripts/validate-test-structure.js",
    "validate:all": "npm run validate:structure && npm run validate:components && npm run validate:tests",
    "check-all": "npm run type-check && npm run lint && npm run format:check && npm run validate:all && npm run test:run",
    "fix-all": "npm run lint:fix && npm run format",
    "pre-commit": "npm run type-check && npm run lint && npm run validate:all",
    "ci": "npm run check-all && npm run build:all",
    "deps:check": "npm audit && npm outdated",
    "deps:update": "npm update",
    "release:patch": "npm version patch",
    "release:minor": "npm version minor",
    "release:major": "npm version major",
    "prepare": "husky"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.5",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-redux": "8.1.0",
    "styled-components": "^5.3.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/react": "18.3.25",
    "@types/react-dom": "18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "concurrently": "^9.0.1",
    "eslint": "^9.36.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^61.0.2",
    "eslint-plugin-unused-imports": "^4.2.0",
    "glob": "^11.0.3",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0",
    "vitest": "^2.1.8"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write",
      "bash -c 'npm run validate:components'"
    ],
    "**/*.{test,spec}.{ts,tsx,js,jsx}": [
      "bash -c 'npm run validate:tests'"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ],
    "apps/**/*.{ts,tsx}": [
      "bash -c 'npm run validate:structure'"
    ],
    "packages/**/*.{ts,tsx}": [
      "bash -c 'npm run validate:structure'"
    ]
  }
}
