{
  "compilerOptions": {
    "ignoreDeprecations": "5.0",

    // === TARGET AND MODULE CONFIGURATION (2025 Standards) ===
    "target": "ES2023",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    // === JAVASCRIPT SUPPORT ===
    "allowJs": false,
    "checkJs": false,

    // === INTEROP AND COMPATIBILITY ===
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    // === JSX CONFIGURATION ===
    "jsx": "react-jsx",
    "jsxImportSource": "react",

    // === STRICT TYPE CHECKING (Latest Industry Standards) ===
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noPropertyAccessFromIndexSignature": true,

    // === ADDITIONAL TYPE CHECKS (Enhanced 2025) ===
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,

    // === EMIT CONFIGURATION ===
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "importHelpers": true,
    "downlevelIteration": true,

    // === MODULE DETECTION (Latest) ===
    "moduleDetection": "force",

    // === PERFORMANCE AND DEBUGGING ===
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,

    // === PATH MAPPING ===
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["packages/shared/src/*"],
      "@shared": ["packages/shared/src"],
      "@internal/*": ["apps/corp-authsigner-ui-internal/src/*"],
      "@external/*": ["apps/corp-authsigner-ui-external/src/*"]
    },

    // === ADVANCED OPTIONS (2025 Standards) ===
    "preserveConstEnums": true,
    "verbatimModuleSyntax": false,
    "allowArbitraryExtensions": false,
    "noErrorTruncation": true,
    "assumeChangesOnlyAffectDirectDependencies": true
  },
  "references": [
    {
      "path": "./packages/shared"
    },
    {
      "path": "./apps/corp-authsigner-ui-internal"
    },
    {
      "path": "./apps/corp-authsigner-ui-external"
    }
  ],
  "include": [],
  "exclude": ["node_modules"]
}
